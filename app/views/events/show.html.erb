<p id="notice"><%= notice %></p>
<div class="contents row">
<div class="event-show-list">
  <strong>名前:</strong>
  <%= @event.title %>
</div>

<div class="event-show-list">
  <strong>説明:</strong>
  <%= @event.description %>
</div>

<div class="event-show-list">
  <strong>コース:</strong>
  <%= @event.course.name %>
</div>

<div class="event-show-list">
  <strong>開始時間:</strong>
  <%=l @event.start_date, format: :short %>
</div>

<div class="event-show-list">
  <strong>終了時間:</strong>
  <%=l @event.end_date, format: :short %>
</div>

<% if user_signed_in? && current_user.id == @event.user_id %>
  <%= link_to '予約変更', edit_event_path(@event) %> |
  <%= link_to '予約取り消し', event_path(@event), method: :delete, data: { confirm: '予約を取り消すと元に戻せません。本当に取り消しますか？' } %> |
<% elsif  user_signed_in? && current_user.admin %>
  <%= link_to '予約変更', edit_event_path(@event) %> |
  <%= link_to '予約取り消し', event_path(@event), method: :delete, data: { confirm: '予約を取り消すと元に戻せません。本当に取り消しますか？' } %> |
<% end %>

<%= link_to 'トップページでカレンダーを確認する', events_path %>
</div>